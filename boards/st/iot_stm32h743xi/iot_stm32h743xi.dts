/dts-v1/;
#include <st/h7/stm32h743Xi.dtsi>
#include <st/h7/stm32h743xihx-pinctrl.dtsi>
#include <zephyr/dt-bindings/input/input-event-codes.h>
#include <zephyr/dt-bindings/mipi_dbi/mipi_dbi.h>
#include <zephyr/dt-bindings/gpio/gpio.h>

/ {
	model = "STM32H743 IOT Board";
	compatible = "st,stm32h743-IOT";

	chosen {
		zephyr,console = &usart1;
		zephyr,shell-uart = &usart1;
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
	};

	pwm0:gpio_pwm {
		compatible = "zephyr,gpio-pwm";
		pwm-controller;
		#pwm-cells = <2>;
		frequency = <20000>;
		gpios = <&gpioe 3 GPIO_ACTIVE_LOW>,
				<&gpiob 0 GPIO_ACTIVE_LOW>,
				<&gpiob 1 GPIO_ACTIVE_LOW>;
		status = "okay";
	};

	pwmleds {
		compatible = "pwm-leds";
		pwm_led0: pwm_led_0 {
			pwms = <&pwm0 1 PWM_MSEC(20)>;	/* R */
		};

		pwm_led1: pwm_led_1 {
			pwms = <&pwm0 2 PWM_MSEC(20)>;	/* G */
		};

		pwm_led2: pwm_led_2 {
			pwms = <&pwm0 0 PWM_MSEC(20)>; /* B */
		};
	};

	gpio_keys {
		compatible = "gpio-keys";
		wakeup1:button_wakeup {
			label = "wakeup";
			gpios = <&gpioa 0 GPIO_ACTIVE_LOW>;
			zephyr,code = <INPUT_KEY_WAKEUP>;
		};
		key0:button_0 {
			label = "key0";
			gpios = <&gpioh 3 GPIO_ACTIVE_LOW>;
			zephyr,code = <INPUT_KEY_0>;
		};
		key1:button_1 {
			label = "key1";
			gpios = <&gpioh 2 GPIO_ACTIVE_LOW>;
			zephyr,code = <INPUT_KEY_1>;
		};
		key2:button_2 {
			label = "key2";
			gpios = <&gpioc 13 GPIO_ACTIVE_LOW>;
			zephyr,code = <INPUT_KEY_2>;
		};
	};
};

&sdmmc1 {
	pinctrl-0 = <&sdmmc1_d0_pc8 &sdmmc1_d1_pc9
		     &sdmmc1_d2_pc10 &sdmmc1_d3_pc11
		     &sdmmc1_ck_pc12 &sdmmc1_cmd_pd2>;
	pinctrl-names = "default";
	// cd-gpios = <&gpiod 4 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
	disk-name = "SD";
	status = "okay";
};

&spi2 {
	pinctrl-0 = <&spi2_mosi_pb15 &spi2_miso_pb14 &spi2_sck_pb13>;
	pinctrl-names = "default";
	status = "okay";
};

&spi4 {
	pinctrl-0 = <&spi4_mosi_pe6 &spi4_sck_pe2>;
	pinctrl-names = "default";
	cs-gpios = <&gpioe 3 GPIO_ACTIVE_HIGH>;
	status = "okay";
};

&usbotg_fs {
	pinctrl-0 = <&usb_otg_fs_dm_pa11 &usb_otg_fs_dp_pa12>;
	pinctrl-names = "default";
	status = "okay";
};

&usart1 {
	pinctrl-0 = <&usart1_tx_pa9 &usart1_rx_pa10>;
	pinctrl-names = "default";
	current-speed = <115200>;
	status = "okay";
};

&clk_lsi {
	status = "okay";
};

&clk_hsi {
	status = "okay";
};

&clk_hsi48 {
	status = "okay";
};

&clk_hse {
	clock-frequency = <DT_FREQ_M(25)>;
	status = "okay";
};

&pll {
	div-m = <5>;
	mul-n = <192>;
	div-p = <2>;
	div-q = <2>;
	div-r = <2>;
	clocks = <&clk_hse>;
	status = "okay";
};

&pll2 {
	div-m = <2>;
	mul-n = <12>;
	div-p = <2>;
	div-q = <2>;
	div-r = <2>;
	clocks = <&clk_hse>;
	status = "okay";
};

&pll3 {
	div-m = <2>;
	mul-n = <12>;
	div-p = <2>;
	div-q = <3>;
	div-r = <2>;
	clocks = <&clk_hse>;
	status = "okay";
};

&rcc {
	clocks = <&pll>;
	clock-frequency = <DT_FREQ_M(480)>;
	d1cpre = <1>;
	hpre = <2>;
	d1ppre = <2>;
	d2ppre1 = <2>;
	d2ppre2 = <2>;
	d3ppre = <2>;
};

&pwr {
	power-supply = "ldo";
};

&rng {
	status = "okay";
};

&backup_sram {
	status = "okay";
};

&iwdg1 {
	status = "okay";
};
