/dts-v1/;
#include <st/f1/stm32f103Xb.dtsi>
#include <st/f1/stm32f103r(8-b)tx-pinctrl.dtsi>
#include <zephyr/dt-bindings/input/input-event-codes.h>

/ {
	model = "STMicroelectronics STM32F103RB-FPGA board";
	compatible = "st,stm32f103rb-fpga";

	chosen {
		zephyr,console = &usart1;
		zephyr,shell-uart = &usart1;
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
	};

	aliases {
		i2c0 = &gpio_i2c0;
		i2c1 = &gpio_i2c1;
	};

	gpio_i2c0: i2c0 {
		compatible = "gpio-i2c";
		#address-cells = <1>;
        #size-cells = <0>;
        clock-frequency = <I2C_BITRATE_STANDARD>;
		scl-gpios = <&gpiob 6 (GPIO_OPEN_DRAIN | GPIO_PULL_UP)>;
		sda-gpios = <&gpiob 7 (GPIO_OPEN_DRAIN | GPIO_PULL_UP)>;
		status = "okay";
	};

	gpio_i2c1: i2c1 {
		compatible = "gpio-i2c";
		#address-cells = <1>;
        #size-cells = <0>;
        clock-frequency = <I2C_BITRATE_STANDARD>;
		scl-gpios = <&gpiob 10 (GPIO_OPEN_DRAIN | GPIO_PULL_UP)>;
		sda-gpios = <&gpiob 11 (GPIO_OPEN_DRAIN | GPIO_PULL_UP)>;
		status = "okay";
	};

	smbus0: smbus0 {
		compatible = "st,stm32-smbus";
		#address-cells = <1>;
		#size-cells = <0>;
		i2c = <&gpio_i2c0>;
		status = "okay";
	};

	smbus1: smbus1 {
		compatible = "st,stm32-smbus";
		#address-cells = <1>;
		#size-cells = <0>;
		i2c = <&gpio_i2c1>;
		status = "okay";
	};

