&timers2 {
	st,prescaler = <65535>;
	status = "okay";

	pwm2: pwm {
		status = "okay";
		pinctrl-0 = <&tim2_ch1_remap1_pwm_out_pa15 &tim2_ch2_remap1_pwm_in_pb3>;
		pinctrl-names = "default";
	};
};

&timers3 {
	st,prescaler = <65535>;
	status = "okay";

	pwm3: pwm {
		status = "okay";
		pinctrl-0 = <&tim3_ch1_pwm_out_pa6 &tim1_ch1n_remap1_pwm_in_pa7>;
		pinctrl-names = "default";
	};
};

&iwdg {
	status = "okay";
};

&rtc {
	clocks = <&rcc STM32_CLOCK(APB1, 28)>,
		 <&rcc STM32_SRC_LSI RTC_SEL(2)>;
	status = "okay";
};

&adc1 {
	pinctrl-0 = <&adc1_in1_pa1 &adc1_in2_pa2>;
	pinctrl-names = "default";
	status = "okay";
};

&die_temp {
	status = "okay";
};

&dma1 {
	status = "okay";
};

&flash0 {
	partitions {
		compatible = "fixed-partitions";
		#address-cells = <1>;
		#size-cells = <1>;

		/* Set 2KB of storage at the end of 128KB flash */
		storage_partition: partition@1f800 {
			label = "storage";
			reg = <0x0001f800 DT_SIZE_K(2)>;
		};
	};
};


&gpio_i2c0 {
    rc32312_0: rc32312@9 {
        compatible = "renesas,rc32312";
        reg = <0x9>;
		dev_num = <0>;
    };
};
