/dts-v1/;
#include <st/g4/stm32g474Xe.dtsi>
#include <st/g4/stm32g474r(b-c-e)tx-pinctrl.dtsi>
#include <zephyr/dt-bindings/input/input-event-codes.h>
#include <zephyr/dt-bindings/led/led.h>

/ {
	model = "STM32G474RE-MOTOR board";
	compatible = "st,stm32g474re-motor";

	chosen {
		zephyr,console = &usart3;
		zephyr,shell-uart = &usart3;
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
		zephyr,canbus = &fdcan1;
		zephyr,code-partition = &slot0_partition;
	};

	aliases {
		led-strip = &led_strip;
		led0 = &led0;
	};

	leds: leds {
		compatible = "gpio-leds";

		led0: led_0 {
			gpios = <&gpioc 13 GPIO_ACTIVE_HIGH>;
			label = "User LD0";
		};
	};


	led_strip: ws2812 {
		compatible = "worldsemi,ws2812-gpio";
		chain-length = <1>;
		color-mapping = <LED_COLOR_ID_GREEN
							LED_COLOR_ID_RED
							LED_COLOR_ID_BLUE>;
		gpios = <&gpioa 5 GPIO_ACTIVE_LOW>;
		status = "okay";
	};
	// pwmleds {
	// 	compatible = "pwm-leds";

	// 	green_pwm_led: green_pwm_led {
	// 		pwms = <&pwm2 1 PWM_MSEC(20) PWM_POLARITY_NORMAL>;
	// 	};
	// };

	gpio_keys {
		compatible = "gpio-keys";

		key1: key_1 {
			label = "KEY1";
			gpios = <&gpioc 9 GPIO_ACTIVE_LOW>;
			zephyr,code = <INPUT_KEY_1>;
		};
		key2: key_2 {
			label = "KEY2";
			gpios = <&gpioc 8 GPIO_ACTIVE_LOW>;
			zephyr,code = <INPUT_KEY_2>;
		};
		key3: key_3 {
			label = "KEY3";
			gpios = <&gpioc 7 GPIO_ACTIVE_LOW>;
			zephyr,code = <INPUT_KEY_3>;
		};
		key4: key_4 {
			label = "KEY4";
			gpios = <&gpioc 6 GPIO_ACTIVE_LOW>;
			zephyr,code = <INPUT_KEY_4>;
		};
	};
};

&clk_lsi {
	status = "okay";
};

&clk_hsi48 {
	status = "okay";
};

&clk_hse {
	clock-frequency = <DT_FREQ_M(8)>;
	status = "okay";
};

&pll {
	div-m = <2>;
	mul-n = <85>;
	div-p = <2>;
	div-q = <2>;
	div-r = <2>;
	clocks = <&clk_hse>;
	status = "okay";
};

&rcc {
	clocks = <&pll>;
	clock-frequency = <DT_FREQ_M(170)>;
	ahb-prescaler = <1>;
	apb1-prescaler = <8>;
	apb2-prescaler = <1>;
};

